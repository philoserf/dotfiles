{
	"hashbang": {
		"prefix": "hash",
		"description": "New script boilerplate",
		"scope": "shellscript",
		"body": [
			"#!/bin/bash",
			"#",
			"# Standard script boilerplate",
			"",
			"[[ -n \\${DEBUG} ]] && set -o xtrace",
			"set -o nounset",
			"set -o pipefail",
			"set -o errexit",
			"IFS=\\$'\\n\\t'",
			"",
			"# shellcheck disable=SC2312,SC2317",
			"log() { printf \"\\$(date +'%Y-%m-%dT%H:%M:%S%z') %s\\n\" \"$*\" >&2; }",
			"# shellcheck disable=SC2317",
			"info() { log \"[INFO]    $*\"; }",
			"# shellcheck disable=SC2317",
			"warning() { log \"[WARNING] $*\"; }",
			"# shellcheck disable=SC2317",
			"error() { log \"[ERROR]   $*\"; }",
			"# shellcheck disable=SC2317",
			"fatal() {",
			"\tlog \"[FATAL]   $*\"",
			"\texit 1",
			"}",
			"",
			"# TODO(name): update usage",
			"usage() {",
			"\tcat <<USAGE",
			"Usage: \\$0 [options]",
			"USAGE",
			"\texit 0",
			"} ",
			"",
			"# shellcheck disable=SC2317",
			"cleanup() {",
			"\ttrap - SIGINT SIGTERM ERR EXIT",
			"\tinfo \"cleaning up\"",
			"\t# TODO(name): implement cleanup",
			"\tinfo \"clean up complete\"",
			"}",
			"trap cleanup SIGINT SIGTERM ERR EXIT",
			"",
			"# TODO(name): implement main",
			"main() {",
			"\tinfo \"starting\"",
			"\tif [[ $# -eq 0 ]]; then usage; fi",
			"\tfatal \"not implemented\"",
			"}",
			"",
			"main \"$@\"",
			""
		]
	}
}