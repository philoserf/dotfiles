{
  "window.autoDetectColorScheme": true,
  "workbench.preferredDarkColorTheme": "Default Dark Modern",
  "workbench.preferredLightColorTheme": "Default Light Modern",
  "workbench.editor.untitled.hint": "hidden",
  "workbench.startupEditor": "none",

  "editor.fontSize": 16,
  "editor.fontFamily": "'Fira Code', monospace",
  "editor.inlineSuggest.enabled": true,

  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  "git.autofetch": true,
  "git.defaultCloneDirectory": "$HOME/source",
  "git.openRepositoryInParentFolders": "never",
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false
  },

  "go.formatTool": "gofumpt",
  "go.lintFlags": ["[\"--enable-all\"]"],
  "go.lintTool": "golangci-lint",
  "go.useLanguageServer": true,
  "gopls": {
    "formatting.gofumpt": true
  },

  "gitlens.graph.layout": "panel",
  "gitlens.autolinks": [
    {
      "prefix": "CHI-",
      "url": "https://droidcloud.atlassian.net/browse/CHI-<num>"
    }
  ],

  "groovyLint.fix.trigger": "onSave",

  "jenkins.pipeline.linter.connector.crumbUrl": "https://jorra.droidcloud.mobi/crumbIssuer/api/xml?xpath=concat(//crumbRequestField,%22:%22,//crumb",
  "jenkins.pipeline.linter.connector.url": "https://jorra.droidcloud.mobi/pipeline-model-converter/validate",
  "jenkins.pipeline.linter.connector.user": "mark.ayers",

  "projectManager.git.baseFolders": ["~/source"],

  "python.defaultInterpreterPath": "/opt/homebrew/bin/python3.11",
  "python.formatting.provider": "black",

  "redhat.telemetry.enabled": false,

  "terminal.external.osxExec": "Hyper.app",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.fontFamily": "'FiraCode Nerd Font', monospace",

  "vs-kubernetes": {
    "vscode-kubernetes.helm-path.mac": "/Users/mark.ayers/.vs-kubernetes/tools/helm/darwin-arm64/helm",
    "vscode-kubernetes.kubectl-path.mac": "/Users/mark.ayers/.vs-kubernetes/tools/kubectl/kubectl",
    "vscode-kubernetes.minikube-path.mac": "/Users/mark.ayers/.vs-kubernetes/tools/minikube/darwin-arm64/minikube"
  },

  "[python]": {
    "editor.formatOnType": true
  },
  "[shellscript]": {
    "editor.defaultFormatter": "mkhl.shfmt"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": true
  },
  "workbench.colorTheme": "Default Light Modern"
}
