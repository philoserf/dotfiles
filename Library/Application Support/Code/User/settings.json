{
  // macOS Modern Tweaks
  "editor.fontSize": 16,
  "editor.fontFamily": "'Fira Code', monospace",
  // "editor.fontFamily": "SF Mono, Monaco",
  "editor.tabSize": 2,
  "editor.fontWeight": "normal",
  "window.titleBarStyle": "native",
  "window.nativeTabs": true,
  // Disable Tab File Icons
  "workbench.editor.showIcons": false,
  // Disable Red Sidebar Errors
  "problems.decorations.enabled": false,
  // Activitus Bar
  "activitusbar.activeColour": "#615F61",
  "activitusbar.views": [{ "name": "todo-tree-view", "codicon": "list-tree" }],

  "window.autoDetectColorScheme": true,
  "workbench.preferredDarkColorTheme": "MacOS Modern Dark - Ventura Xcode",
  "workbench.preferredLightColorTheme": "MacOS Modern Light - Ventura Xcode",
  "workbench.startupEditor": "none",
  "workbench.colorTheme": "MacOS Modern Light - Ventura Xcode",
  "workbench.iconTheme": "macos-modern-big-sur-icon-theme",
  "workbench.productIconTheme": "macos-modern",
  "workbench.editor.empty.hint": "hidden",
  "diffEditor.ignoreTrimWhitespace": false,

  "editor.inlineSuggest.enabled": true,

  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "afterDelay",

  "git.autofetch": true,
  "git.defaultCloneDirectory": "$HOME/source",
  "git.openRepositoryInParentFolders": "never",

  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false,
    "yaml": true
  },

  "gitlens.graph.layout": "panel",
  "gitlens.autolinks": [
    {
      "prefix": "CHI-",
      "url": "https://droidcloud.atlassian.net/browse/CHI-<num>"
    }
  ],
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": true
  },
  "gitlens.graph.minimap.dataType": "lines",
  "gitlens.graph.minimap.additionalTypes": [
    "localBranches",
    "stashes",
    "remoteBranches",
    "tags"
  ],
  "gitlens.hovers.autolinks.enabled": false,
  "gitlens.hovers.autolinks.enhanced": false,
  "gitlens.views.commitDetails.autolinks.enabled": false,
  "gitlens.views.commitDetails.autolinks.enhanced": false,
  "gitlens.graph.minimap.enabled": false,


  "go.formatTool": "gofumpt",
  "go.lintFlags": ["[\"--enable-all\"]"],
  "go.lintTool": "golangci-lint",
  "go.useLanguageServer": true,
  "go.toolsManagement.autoUpdate": true,

  "gopls": {
    "formatting.gofumpt": true
  },

  "projectManager.git.baseFolders": ["~/source"],
  "projectManager.sortList": "Path",

  "redhat.telemetry.enabled": false,

  "terminal.external.osxExec": "Hyper.app",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.fontFamily": "'FiraCode Nerd Font', monospace",

  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[ruby]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "editor.rulers": [120],
    "editor.semanticHighlighting.enabled": true
  },

  "[python]": {
    "editor.formatOnType": true,
    "editor.defaultFormatter": "ms-python.black-formatter"
  },

  "[shellscript]": {
    "editor.defaultFormatter": "mkhl.shfmt"
  },

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },

  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    }
  },

  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },

  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}