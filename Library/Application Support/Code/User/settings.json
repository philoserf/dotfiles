{
  // macOS Modern Tweaks
  "editor.fontSize": 16,
  "editor.fontFamily": "'Fira Code', monospace",
  // "editor.fontFamily": "SF Mono, Monaco",
  "editor.tabSize": 2,
  "editor.fontWeight": "normal",
  "window.titleBarStyle": "native",
  "window.nativeTabs": true,
  // Disable Tab File Icons
  "workbench.editor.showIcons": false,
  // Disable Red Sidebar Errors
  "problems.decorations.enabled": false,
  // Activitus Bar
  "activitusbar.activeColour": "#615F61",
  "workbench.activityBar.visible": true,
  "activitusbar.views": [{ "name": "todo-tree-view", "codicon": "list-tree" }],

"window.autoDetectColorScheme": true,
  "workbench.preferredDarkColorTheme": "MacOS Modern Dark - Ventura Xcode",
  "workbench.preferredLightColorTheme": "MacOS Modern Light - Ventura Xcode",
  "workbench.editor.untitled.hint": "hidden",
  "workbench.startupEditor": "none",
  "workbench.colorTheme": "MacOS Modern Light - Ventura Xcode",
  "workbench.iconTheme": "macos-modern-big-sur-icon-theme",
  "workbench.productIconTheme": "macos-modern",

  "editor.inlineSuggest.enabled": true,

  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  "git.autofetch": true,
  "git.defaultCloneDirectory": "$HOME/source",
  "git.openRepositoryInParentFolders": "never",
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false
  },

  "go.formatTool": "gofumpt",
  "go.lintFlags": ["[\"--enable-all\"]"],
  "go.lintTool": "golangci-lint",
  "go.useLanguageServer": true,
  "gopls": {
    "formatting.gofumpt": true
  },

  "gitlens.graph.layout": "panel",
  "gitlens.autolinks": [
    {
      "prefix": "CHI-",
      "url": "https://droidcloud.atlassian.net/browse/CHI-<num>"
    }
  ],

  "projectManager.git.baseFolders": [
    "~/source"
  ],
  "python.defaultInterpreterPath": "/opt/homebrew/bin/python3.11",
  "python.formatting.provider": "black",

  "redhat.telemetry.enabled": false,

  "terminal.external.osxExec": "Hyper.app",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.fontFamily": "'FiraCode Nerd Font', monospace",

  "vs-kubernetes": {
    "vscode-kubernetes.helm-path.mac": "/Users/mark.ayers/.vs-kubernetes/tools/helm/darwin-arm64/helm",
    "vscode-kubernetes.kubectl-path.mac": "/Users/mark.ayers/.vs-kubernetes/tools/kubectl/kubectl",
    "vscode-kubernetes.minikube-path.mac": "/Users/mark.ayers/.vs-kubernetes/tools/minikube/darwin-arm64/minikube"
  },

  "[python]": {
    "editor.formatOnType": true
  },
  "[shellscript]": {
    "editor.defaultFormatter": "mkhl.shfmt"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": true
  },
  "projectManager.sortList": "Path",
  "gitlens.graph.minimap.dataType": "lines",
  "gitlens.graph.minimap.additionalTypes": [
    "localBranches",
    "stashes",
    "remoteBranches",
    "tags"
  ],
  "gitlens.graph.minimap.enabled": false
}