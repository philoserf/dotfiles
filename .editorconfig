root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[*.js]
indent_size = 4

[*.py]
indent_size = 4

[*.go]
indent_size = 4
indent_style = tab

[Makefile]
indent_size = 4
indent_style = tab

[*.mk]
indent_size = 4
indent_style = tab

[*gitconfig]
indent_size = 4
indent_style = tab

[*.json]
insert_final_newline = false
